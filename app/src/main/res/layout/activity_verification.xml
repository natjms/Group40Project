<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <EditText
        android:id="@+id/editName"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <EditText
        android:id="@+id/dobText"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Date of Birth"
        android:text=""
        android:orientation="horizontal"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail" />

    <EditText
        android:id="@+id/password"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Password"
        android:text=""
        android:orientation="horizontal"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dobText" />

    <CheckBox
        android:id="@+id/isLandlordAccount"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="7dp"
        android:ems="10"
        android:gravity="center"
        android:text="Register as Landlord account?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        />

    <Button
        android:id="@+id/signUp"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Sign up"
        android:onClick="onSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isLandlordAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>